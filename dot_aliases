export EDITOR="nvim"

alias vi="nvim"
alias neofetch="fastfetch"
alias upgrade="paru -SFyu --fm nvim && flatpak upgrade && paru -Fy"
alias clean="paru -c && paru -Sc && flatpak uninstall --unused"
alias cat="bat"
alias grep="rg"
alias cm="chezmoi"
alias firefox="mercury-browser"

alias ld="eza -lD"
alias lf="eza -lF --color=always | grep -v /"
alias lh="eza -dl .* --group-directories-first"
alias ll="eza -al --group-directories-first"
alias ls="eza"
alias lt="eza -al --sort=modified"
